<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/fazenda"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/alterarFoto"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_circle"
                android:src="@drawable/camera_24dp"
                app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                app:layout_constraintTop_toTopOf="@+id/circleImageView" />

            <LinearLayout
                android:id="@+id/layoutParent"
                android:layout_height="wrap_content"
                android:layout_width="350dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/alterarFoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome" />

                        <TextView
                            android:id="@+id/nomeFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fazenda 1"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNPJ" />

                        <TextView
                            android:id="@+id/cnpjFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="321321321321321321"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CEP" />

                        <TextView
                            android:id="@+id/cepFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="59575000"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado" />

                        <TextView
                            android:id="@+id/estadoFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RN"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cidade" />

                        <TextView
                            android:id="@+id/cidadeFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Macaíba"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bairro" />

                        <TextView
                            android:id="@+id/bairroFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="jundiaí"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número" />

                        <TextView
                            android:id="@+id/numeroFazenda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="210"
                            android:textColor="@color/BlackT"
                            android:textSize="15dp" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/editarInformacoes"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/branco"
                android:background="@color/colorPrimary"
                android:text="Editar Informações"
                android:onClick="editar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutParent"/>

            <Button
                android:id="@+id/excluirFazenda"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/Red"
                android:text="Excluir Fazenda"
                android:textColor="@color/branco"
                android:onClick="excluir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editarInformacoes" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.widget.ScrollView>