<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:context=".Activity.VisualizarFotoAmostrasActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amostras Recebidas da Solicitação"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/imageViewFotoAmostras"
            android:layout_width="370dp"
            android:layout_height="400dp"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/imageButtonFotoAmostras"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shape_circle"
            android:src="@drawable/camera_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>


    </LinearLayout>


</android.support.v7.widget.CardView>