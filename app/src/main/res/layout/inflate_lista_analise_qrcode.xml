<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewLayoutSolicitacoesQrCode"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="3dp"
    android:focusable="true"
    android:clickable="true"
    android:elevation="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:layout_constraintEnd_toEndOf="@+id/numAmostrasAnaliseQrCode"
        card_view:layout_constraintStart_toEndOf="@+id/numAmostrasAnaliseQrCode">

        <TextView
            android:id="@+id/numAmostrasAnaliseQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Quantidade de Amostras: 2"
            android:textColor="@color/BlackT"
            android:textSize="15dp"
            card_view:layout_constraintEnd_toEndOf="@+id/tipoLeiteAnaliseQrCode"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tipoLeiteAnaliseQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tipo do Leite: PASTEURIZADO"
            android:textColor="@color/BlackT"
            android:textSize="15dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/numAmostrasAnaliseQrCode" />

        <TextView
            android:id="@+id/origemDoLeiteAnaliseQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Origem do Leite: TETO"
            android:textColor="@color/BlackT"
            android:textSize="15dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tipoLeiteAnaliseQrCode" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/numAmostrasAnaliseQrCode"
            card_view:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/amostrasFinalizadas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="50"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="/" />

            <TextView
                android:id="@+id/totalAmostras"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="100"
                android:textStyle="bold" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>
